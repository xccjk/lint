{
  "compilerOptions": {
    "module": "esnext",
    "noEmit": true,
    "moduleResolution": "node",
    "target": "esnext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "/scripts",
    "/dist",
    "/build",
    "/es",
    "/lib",
    "/plugins"
  ]
}
